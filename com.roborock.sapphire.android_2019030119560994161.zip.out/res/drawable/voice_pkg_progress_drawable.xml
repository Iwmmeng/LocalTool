<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/voice_pkg_progress_bar_bg_radius" />
            <gradient android:startColor="@color/voice_pkg_progress_bar_bg" android:endColor="@color/voice_pkg_progress_bar_bg" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/voice_pkg_progress_bar_bg" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/voice_pkg_progress_bar_bg_radius" />
                <gradient android:startColor="@color/voice_pkg_progress_bar_bg" android:endColor="@color/voice_pkg_progress_bar_bg" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/voice_pkg_progress_bar_bg" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/voice_pkg_progress_bar_bg_radius" />
                <gradient android:startColor="@color/voice_pkg_progress_bar_progress" android:endColor="@color/voice_pkg_progress_bar_progress" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/voice_pkg_progress_bar_progress" />
            </shape>
        </clip>
    </item>
</layer-list>